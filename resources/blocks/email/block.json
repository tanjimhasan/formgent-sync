{
	"$schema": "https://schemas.wp.org/trunk/block.json",
	"apiVersion": 3,
	"name": "formgent/email",
	"title": "Email",
	"category": "formgent",
	"description": "FormGent Email field.",
	"textdomain": "formgent",
	"attributes": {
		"id": {
			"type": "string",
			"default": ""
		},
		"name": {
			"type": "string",
			"default": "email"
		},
		"value": {
			"type": "string",
			"default": ""
		},
		"placeholder": {
			"type": "string",
			"default": ""
		},
		"confirm_placeholder": {
			"type": "string",
			"default": ""
		},
		"label": {
			"type": "string",
			"default": "Email"
		},
		"label_alignment": {
			"type": "string",
			"default": "top"
		},
		"sub_label": {
			"type": "string",
			"default": ""
		},
		"confirm_sub_label": {
			"type": "string",
			"default": ""
		},
		"show_field_icon": {
			"type": "boolean",
			"default": false
		},
		"enable_confirmation_field": {
			"type": "boolean",
			"default": false
		},
		"confirm_label": {
			"type": "string",
			"default": "Confirm Email"
		},
		"confirmation_field_gap": {
			"type": "string",
			"default": "1.2rem"
		},
		"required": {
			"type": "boolean",
			"default": false
		}
	},
	"supports": {
		"interactivity": true
	},
	"editorScript": "file:index.js",
	"style": "file:style-index.css",
	"editorStyle": "file:index.css",
	"render": "file:render.php"
}
